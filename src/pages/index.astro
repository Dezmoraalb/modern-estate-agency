      transition: opacity 1s ease-out, transform 1s ease-out;
      will-change: opacity, transform;
    }
    
    .fade-in-section.is-visible, .reveal-text.is-visible {
      opacity: 1;
      transform: translateY(0);
    }

    .reveal-text {
      animation: reveal 1s ease-out forwards;
      opacity: 0;
    }

    .reveal-on-hover {
