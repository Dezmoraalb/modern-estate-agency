---
import Layout from '../layouts/Layout.astro';
import MagneticButton from '../components/MagneticButton';
import StaggeredText from '../components/StaggeredText';
import PhoneShowcase from '../components/PhoneShowcase';
import BentoCard from '../components/BentoCard';
import InstagramMarquee from '../components/InstagramMarquee';

const baseUrl = import.meta.env.BASE_URL;
---

<Layout title="Modern Estate Agency | Закритий клуб нерухомості">
  
  <div id="particles-container" class="fixed inset-0 z-[1] pointer-events-none"></div>

  <nav class="fixed top-0 left-0 right-0 z-50 transition-all duration-300 bg-black/80 md:bg-black/40 backdrop-blur-xl md:backdrop-blur-md border-b border-white/5">
    <div class="container mx-auto px-6 py-4 flex items-center justify-between">
      <img src={`${baseUrl}assets/modern-estate-agency-logo.jpg`} alt="Logo" class="h-20 md:h-32 w-auto opacity-90 brightness-110" />
      <div class="flex items-center gap-4 md:gap-6">
        <a href="tel:0970977774" class="text-white text-sm md:text-base font-light hover:text-white/80 transition-colors">
          097 097 77 74
        </a>
        <a href="https://t.me/modern_estate_agency" target="_blank" class="group relative px-5 py-2 md:px-8 md:py-3 overflow-hidden rounded-full bg-white/5 border border-white/20 text-white transition-all hover:border-white/40 hover:shadow-[0_0_20px_rgba(255,255,255,0.1)]">
          <div class="absolute inset-0 w-0 bg-white/10 transition-all duration-[400ms] ease-out group-hover:w-full"></div>
          <span class="relative text-[10px] md:text-xs font-bold tracking-widest uppercase text-white group-hover:text-white transition-colors">Написати нам</span>
        </a>
      </div>
    </div>
  </nav>

  <section id="hero-section" class="relative min-h-[100dvh] w-full flex flex-col justify-center md:justify-end pb-12 md:pb-32 overflow-hidden z-10">
    <video id="hero-video" autoplay loop muted playsinline class="absolute top-0 left-0 w-full h-full object-cover z-0 scale-110 opacity-100 pointer-events-none">
      <source src={`${baseUrl}assets/city-night-drone.mp4`} type="video/mp4" />
    </video>
    <div class="absolute inset-0 z-[4] pointer-events-none" style="background: radial-gradient(ellipse at center, transparent 0%, rgba(0,0,0,0.4) 70%, rgba(0,0,0,0.8) 100%);"></div>
    <div id="hero-blur" class="absolute top-0 left-0 w-full h-full bg-gradient-to-t from-black/90 via-black/60 to-transparent z-[5] pointer-events-none"></div>
    
    <div class="relative z-20 container mx-auto px-6 fade-in-section pt-24 md:pt-28">
        <div class="max-w-5xl">
          <div class="inline-flex items-center gap-3 mb-4 md:mb-6 px-3 py-1.5 md:px-4 md:py-2 rounded-full bg-white/5 border border-white/10 backdrop-blur-md">
            <span class="w-2 h-2 rounded-full bg-white/60 animate-pulse"></span>
            <span class="text-white/80 text-xs font-bold tracking-widest uppercase">Modern Estate Agency</span>
          </div>
          
          <h1 class="flex flex-col font-display font-bold text-white mb-6 md:mb-8 drop-shadow-[0_4px_12px_rgba(0,0,0,0.8)]">
  
            <span class="block leading-[0.9] md:leading-[0.85] reveal-text" style="animation-delay: 0.1s;">
              Нерухомість
            </span>
            
            <span class="block leading-[0.9] md:leading-[0.85] reveal-text" style="animation-delay: 0.3s;">
              <span class="bg-clip-text text-transparent bg-[linear-gradient(110deg,#e1cda6,45%,#ffffff,55%,#e1cda6)] bg-[length:250%_100%] animate-shimmer-text italic pr-4 pb-1 relative z-10">
                Закритого
              </span>
            </span>
            
            <span class="block leading-[0.9] md:leading-[0.85] reveal-text" style="animation-delay: 0.5s;">
              Формату.
            </span>
          
          </h1>
          
          <p class="text-white text-base md:text-2xl font-light leading-relaxed mb-8 md:mb-12 pl-4 border-l-2 border-white/40 drop-shadow-[0_2px_8px_rgba(0,0,0,0.6)]">
             База обʼєктів нерухомості агенції
          </p>
          
          <div class="flex flex-col md:flex-row items-start md:items-center gap-4 md:gap-6">
            <MagneticButton 
              client:load
              href="https://t.me/modern_estate_agency" 
              target="_blank"
              className="w-full md:w-auto"
            >
              <div class="h-14 md:h-16 px-8 flex items-center justify-center bg-white/5 backdrop-blur-md border border-white/20 rounded-sm text-[#40a7e3] font-bold tracking-widest uppercase hover:bg-white/10 hover:border-[#40a7e3]/50 transition-all duration-500 hover:shadow-[0_0_30px_rgba(64,167,227,0.3)]">
