  <div class="h-px w-full bg-gradient-to-r from-transparent via-white/30 to-transparent"></div>

  <footer class="bg-black py-12 md:py-20 relative overflow-hidden">
    <div class="absolute inset-0 opacity-[0.03] md:opacity-10 pointer-events-none">
      <img src={`${baseUrl}assets/modern-estate-agency-logo.jpg`} alt="Logo" class="w-full h-full object-cover object-center" />
