    }

    @keyframes fadeOut {
      to {
        opacity: 0;
        transform: translateY(-20px) scale(0);
      }
    }

    @keyframes shimmer {
      0% {
        background-position: -200% 0;
      }
      100% {
        background-position: 200% 0;
      }
    }

    .magnetic-card {
      transform-style: preserve-3d;
      transition: transform 0.3s ease-out;
    }

    #phone-container {
